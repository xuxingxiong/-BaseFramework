<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weixin.mapper.AccountMenuDao">


	<select id="listForPage" parameterType="com.weixin.entity.AccountMenu" resultType="com.weixin.entity.AccountMenu">
		SELECT m.* ,m2.name as parentName
		from t_wxcms_account_menu m LEFT JOIN t_wxcms_account_menu m2
		on m.parentId = m2.id
		WHERE m.gid = #{gid}
	</select>
	
	<select id="listParentMenu" resultType="com.weixin.entity.AccountMenu">
		SELECT * FROM t_wxcms_account_menu where parentId = 0 ORDER BY sort
	</select>

	<select id="listWxMenus"  parameterType="java.lang.String" resultType="com.weixin.entity.AccountMenu">
		SELECT * FROM t_wxcms_account_menu 
		where gid = #{gid}
		ORDER BY parentId, sort
	</select>

	<select id="getById" parameterType="java.lang.String" resultType="com.weixin.entity.AccountMenu">
		SELECT * FROM t_wxcms_account_menu WHERE ID = #{id}
	</select>

	<insert id="add" parameterType="com.weixin.entity.AccountMenu" flushCache="true">
		INSERT INTO t_wxcms_account_menu ( MTYPE,EVENTTYPE,NAME,INPUTCODE,URL,SORT,MSGID,PARENTID,GID,CREATETIME )  VALUES ( #{mtype},#{eventType},#{name},#{inputcode},#{url},#{sort},#{msgId},#{parentid},#{gid},#{createtime} ) 
	</insert>

	<update id="update" parameterType="com.weixin.entity.AccountMenu" flushCache="true">
		UPDATE t_wxcms_account_menu SET MTYPE = #{mtype},NAME = #{name},INPUTCODE = #{inputcode},URL = #{url},SORT = #{sort},PARENTID = #{parentid},CREATETIME = #{createtime} WHERE ID = #{id} 
	</update>

	<delete id="delete" parameterType="com.weixin.entity.AccountMenu" >
		DELETE FROM t_wxcms_account_menu WHERE ID = #{id}
	</delete>

</mapper>
