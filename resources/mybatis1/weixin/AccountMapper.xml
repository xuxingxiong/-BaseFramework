<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weixin.mapper.AccountDao">


	<select id="listForPage" parameterType="com.weixin.entity.Account" resultType="com.weixin.entity.Account">
		SELECT * FROM t_wxcms_account ORDER BY ID DESC
	</select>

	<select id="getById" parameterType="java.lang.String" resultType="com.weixin.entity.Account">
		SELECT * FROM t_wxcms_account WHERE ID = #{id}
	</select>
	
	<select id="getByAccount" parameterType="java.lang.String" resultType="com.weixin.entity.Account">
		SELECT * FROM t_wxcms_account WHERE account = #{account} ORDER BY ID DESC limit 1
	</select>
	
	<select id="getSingleAccount" resultType="com.weixin.entity.Account">
		SELECT * FROM t_wxcms_account ORDER BY ID DESC limit 1
	</select>

	<insert id="add" parameterType="com.weixin.entity.Account" flushCache="true">
		INSERT INTO t_wxcms_account ( NAME,ACCOUNT,APPID,APPSECRET,URL,TOKEN,MSGCOUNT,ID,CREATETIME )  VALUES ( #{name},#{account},#{appid},#{appsecret},#{url},#{token},#{msgcount},#{id},#{createtime} ) 
	</insert>

	<update id="update" parameterType="com.weixin.entity.Account" flushCache="true">
		UPDATE t_wxcms_account SET NAME = #{name},ACCOUNT = #{account},APPID = #{appid},APPSECRET = #{appsecret},URL = #{url},TOKEN = #{token},MSGCOUNT = #{msgcount},CREATETIME = #{createtime} WHERE ID = #{id} 
	</update>

	<delete id="delete" parameterType="com.weixin.entity.Account" >
		DELETE FROM t_wxcms_account WHERE ID = #{id}
	</delete>

</mapper>
