<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.weixin.mapper.AccountMenuGroupDao">


	<select id="list" parameterType="com.weixin.entity.AccountMenuGroup" resultType="com.weixin.entity.AccountMenuGroup">
		SELECT * FROM t_wxcms_account_menu_group ORDER BY ID
	</select>

	<select id="getTotalItemsCount" parameterType="com.weixin.entity.AccountMenuGroup" resultType="java.lang.Integer">
		SELECT COUNT(*) FROM t_wxcms_account_menu_group
	</select>

	<select id="paginationEntity" resultType="com.weixin.entity.AccountMenuGroup">
		SELECT * FROM t_wxcms_account_menu_group ORDER BY ID LIMIT #{param2.start} , #{param2.pageSize} 
	</select>

	<select id="getById" parameterType="java.lang.String" resultType="com.weixin.entity.AccountMenuGroup">
		SELECT * FROM t_wxcms_account_menu_group WHERE ID = #{id}
	</select>

	<insert id="add" parameterType="com.weixin.entity.AccountMenuGroup" flushCache="true"  useGeneratedKeys="true" keyProperty="id"  >
		INSERT INTO t_wxcms_account_menu_group ( NAME,ENABLE,ID,CREATETIME )  VALUES ( #{name},#{enable},#{id},#{createtime} ) 
	</insert>
	
	<update id="updateMenuGroupDisable" flushCache="true">
		UPDATE t_wxcms_account_menu_group SET ENABLE = 0
	</update>
	
	<update id="updateMenuGroupEnable" parameterType="java.lang.String" flushCache="true">
		UPDATE t_wxcms_account_menu_group SET ENABLE = 1 WHERE ID = #{id}
	</update>

	<update id="update" parameterType="com.weixin.entity.AccountMenuGroup" flushCache="true">
		UPDATE t_wxcms_account_menu_group SET NAME = #{name},ENABLE = #{enable},CREATETIME = #{createtime} WHERE ID = #{id} 
	</update>

	<delete id="deleteAllMenu" parameterType="com.weixin.entity.AccountMenuGroup" >
		DELETE FROM t_wxcms_account_menu WHERE GID = #{id}
	</delete>

	<delete id="delete" parameterType="com.weixin.entity.AccountMenuGroup" >
		DELETE FROM t_wxcms_account_menu_group WHERE ID = #{id}
	</delete>

</mapper>
