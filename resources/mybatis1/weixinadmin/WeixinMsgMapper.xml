<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WeixinMsgMapper">
	
	<!--表名 -->
	<sql id="tableName">
		T_WXCMS_MSG_BASE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		MSGTYPE,	
		INPUTCODE,	
		RULE,	
		ENABLE,	
		READCOUNT,	
		FAVOURCOUNT,	
		CREATETIME,	
		ID WEIXINMSG_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{MSGTYPE},	
		#{INPUTCODE},	
		#{RULE},	
		#{ENABLE},	
		#{READCOUNT},	
		#{FAVOURCOUNT},	
		#{CREATETIME},	
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
			MSGTYPE,	
			INPUTCODE,	
			RULE,	
			ENABLE,	
			READCOUNT,	
			FAVOURCOUNT,	
			CREATETIME
		) values (
			#{MSGTYPE},	
			#{INPUTCODE},	
			#{RULE},	
			#{ENABLE},	
			#{READCOUNT},	
			#{FAVOURCOUNT},	
			NOW()
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{WEIXINMSG_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			MSGTYPE = #{MSGTYPE},
			INPUTCODE = #{INPUTCODE}
		where 
		ID = #{WEIXINMSG_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{WEIXINMSG_ID}
	</select>
	<!-- 通过关键字获取数据 -->
	<select id="findByInputCode" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			INPUTCODE = #{INPUTCODE}
	</select>
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 数量 -->
	<select id="msgcount" parameterType="pd" resultType="pd">
		select
			count(1) msgCount
		from 
			(
				select
					t_wxcms_msg_text.id
				from
					t_wxcms_msg_base
				inner join 
					t_wxcms_msg_text
				on
					t_wxcms_msg_base.id = t_wxcms_msg_text.base_id
				where
					t_wxcms_msg_base.id =  #{BASE_ID}  
				UNION ALL
				
				select
					t_wxcms_msg_news.id
				from
					t_wxcms_msg_base
				inner join 
					t_wxcms_msg_news
				on
					t_wxcms_msg_base.id = t_wxcms_msg_news.base_id
				where
					t_wxcms_msg_base.id  =  #{BASE_ID}  
			) t
	</select>
	
	<!-- fh313596790qq(青苔) -->
</mapper>