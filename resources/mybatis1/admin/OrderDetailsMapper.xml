<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderDetailsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		T_ORDER_DETAILS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ORDER_ID,	
		ORDER_SUB_ID,	
		TYPE,	
		GOODS_ID,	
		GOODS_NAME,	
		PURCHACE_PRICE,	
		PRICE,	
		GOODS_NUM,	
		IS_DISCUT,
		CREATE_TIME,	
		MODIFY_TIME,	
		CREATER,	
		UPDATER
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ORDER_ID},	
		#{ORDER_SUB_ID},	
		#{TYPE},	
		#{GOODS_ID},	
		#{GOODS_NAME},	
		#{PURCHACE_PRICE},	
		#{PRICE},	
		#{GOODS_NUM},
		#{IS_DISCUT},	
		#{CREATE_TIME},	
		#{MODIFY_TIME},	
		#{CREATER},	
		#{UPDATER}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ORDER_ID = #{ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TYPE = #{TYPE},
			GOODS_ID = #{GOODS_ID},
			GOODS_NAME = #{GOODS_NAME},
			PURCHACE_PRICE = #{PURCHACE_PRICE},
			PRICE = #{PRICE},
			GOODS_NUM = #{GOODS_NUM},	
			MODIFY_TIME = #{MODIFY_TIME},	
			UPDATER = #{UPDATER}
		where 
		ORDER_ID = #{ORDER_ID} and ORDER_SUB_ID = #{ORDER_SUB_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ORDER_ID = #{ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ORDER_ID = #{ORDER_ID}
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ORDER_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>