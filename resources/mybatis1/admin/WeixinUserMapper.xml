<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WeixinUserMapper">

	<!--表名 -->
	<sql id="tableName">
		M_USER
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		ID                     ,
		USER_NAME              ,
		WECHAT_ID              ,
		WECHAT_NAME            ,
		WECHAT_FOCUS_TIME      ,
		CREATE_TIME            ,
		MODIFY_TIME            ,
		CREATER                ,
		UPDATER
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},
		#{USER_NAME},
		#{WECHAT_ID},
		#{WECHAT_NAME},
		#{WECHAT_FOCUS_TIME},
		NOW(),
		NOW(),
		#{CREATER},
		#{UPDATER}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		ID = #{ID}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		USER_NAME         = #{USER_NAME},
		WECHAT_ID         = #{WECHAT_ID},
		WECHAT_NAME       = #{WECHAT_NAME},
		WECHAT_FOCUS_TIME = #{WECHAT_FOCUS_TIME},
		MODIFY_TIME       = NOW(),
		UPDATER           = #{UPDATER}
		where
		ID = #{ID}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		ID = #{ID}
	</select>
	
	<!-- 通过微信ID获取数据 -->
	<select id="findByWeichatId" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		WECHAT_ID = #{WECHAT_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
			(
			<!-- 根据需求自己加检索条件 -->
			
			)
		</if>
		order by DISPLAY_ORDER+0 ASC,MODIFY_TIME desc
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		order by DISPLAY_ORDER+0 ASC,MODIFY_TIME desc
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		ID in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>

	
	<!-- fh313596790qq(青苔) -->
</mapper>