<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CarePriceMapper">
	
	<!--表名 -->
	<sql id="tableName">
		M_CARE_PRICE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ID,	
		SUB_ID,	
		NAME,	
		NAME_EN,	
		PRICE,	
		PURCHACE_PRICE,	
		DISPLAY_ORDER,	
		IS_DEL,	
		CREATE_TIME,	
		MODIFY_TIME,	
		CREATER,	
		UPDATER
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},	
		#{SUB_ID},	
		#{NAME},	
		#{NAME_EN},	
		#{PRICE},	
		#{PURCHACE_PRICE},	
		#{DISPLAY_ORDER},	
		#{IS_DEL},	
		#{CREATE_TIME},	
		#{MODIFY_TIME},	
		#{CREATER},	
		#{UPDATER}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where ID = #{ID} 
		<if test="SUB_ID != null and SUB_ID != ''">
			and SUB_ID = #{SUB_ID}
		</if>
		
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			NAME = #{NAME},
			NAME_EN = #{NAME_EN},
			PRICE = #{PRICE},
			PURCHACE_PRICE = #{PURCHACE_PRICE},
			DISPLAY_ORDER = #{DISPLAY_ORDER},
			MODIFY_TIME = #{MODIFY_TIME},	
			UPDATER = #{UPDATER}
		where ID = #{ID} and SUB_ID = #{SUB_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ID = #{ID} and SUB_ID = #{SUB_ID}
	</select>
	
	<!-- 通过Care获取数据 -->
	<select id="findByCare" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ID = #{ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ID = #{pd.ID}
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where ID = #{ID}
	</select>
	
	<!-- SUB_ID最大值 -->
	<select id="queryMaxSubIdById" parameterType="pd" resultType="Integer">
		select SUB_ID from 
		<include refid="tableName"></include>
		where ID = #{ID} order by SUB_ID DESC LIMIT 1
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
		<foreach collection="list" item="item" index="index" separator="or">  
       		(SUB_ID = #{item.SUB_ID} and ID=#{item.ID})
    	</foreach> 
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>