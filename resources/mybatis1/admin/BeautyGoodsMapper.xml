<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BeautyGoodsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		M_GOODS
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ID,	
		TYPE,	
		NAME,	
		DETAILS,	
		PRICE,	
		UNIT,	
		PURCHACE_PRICE,	
		FROM_CHANNEL,	
		SPEC,	
		DISPLAY_ORDER,	
		INFO,	
		ITEM1,	
		ITEM2,	
		ITEM3,
		STOCK,	
		IS_DEL,
		IMAGE_ID,	
		CREATE_TIME,	
		MODIFY_TIME,	
		CREATER,	
		UPDATER
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},	
		#{TYPE},	
		#{NAME},	
		#{DETAILS},	
		#{PRICE},	
		#{UNIT},
		#{PURCHACE_PRICE},	
		#{FROM_CHANNEL},	
		#{SPEC},	
		#{DISPLAY_ORDER},	
		#{INFO},	
		#{ITEM1},	
		#{ITEM2},	
		#{ITEM3},
		#{STOCK},	
		#{IS_DEL},
		#{IMAGE_ID},	
		#{CREATE_TIME},	
		#{MODIFY_TIME},	
		#{CREATER},	
		#{UPDATER}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TYPE = #{TYPE},
			NAME = #{NAME},
			DETAILS = #{DETAILS},
			PRICE = #{PRICE},
			UNIT = #{UNIT},
			PURCHACE_PRICE = #{PURCHACE_PRICE},
			FROM_CHANNEL = #{FROM_CHANNEL},
			SPEC = #{SPEC},
			DISPLAY_ORDER = #{DISPLAY_ORDER},
			INFO = #{INFO},
			ITEM1 = #{ITEM1},
			ITEM2 = #{ITEM2},
			ITEM3 = #{ITEM3},
			STOCK = #{STOCK},
			IMAGE_ID = #{IMAGE_ID}
		where 
		ID = #{ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and	
				(
					NAME LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					DETAILS LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				)
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>