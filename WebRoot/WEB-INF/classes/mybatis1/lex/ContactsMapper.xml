<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ContactsMapper">
	
	<!--表名 -->
	<sql id="tableName">
		lex_contacts
	</sql> 
	
	<!-- 字段 -->
	<sql id="Field">
		user_id,
		friend_user_id,
		create_time,	
		name_note,	
		contacts_group_id,	
		picture_id,	
		description,
		contacts_id,
		contacts_type
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{user_id},
		#{friend_user_id},
		#{create_time},	
		#{name_note},	
		#{contacts_group_id},	
		#{picture_id},	
		#{description},
		#{contacts_id},
		#{contacts_type}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			contacts_id = #{contacts_id}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			user_id = #{user_id},
			friend_user_id = #{friend_user_id},
			name_note = #{name_note},
			contacts_group_id = #{contacts_group_id},
			picture_id = #{picture_id},
			description = #{description},
			contacts_type = #{contacts_type},
			contacts_id = contacts_id
		where 
		contacts_id = #{contacts_id}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			contacts_id = #{contacts_id}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>

	<!--app查询使用-->
	<select id="appDataListPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.user_id!= null and pd.user_id != ''">
			AND  user_id = #{pd.user_id}
		</if>
		<if test="pd.friend_user_id!= null and pd.friend_user_id != ''">
			AND  friend_user_id = #{pd.friend_user_id}
		</if>

		<if test="pd.contacts_type!= null and pd.contacts_type != ''">
			AND  contacts_type = #{pd.contacts_type}
		</if>

		<if test="pd.contacts_group_id!= null and pd.contacts_group_id != ''">
			AND  contacts_group_id = #{pd.contacts_group_id}
		</if>
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			contacts_id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>